<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="24dp"
    >
    <TextView
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="account page"
        android:textColor="@color/purple_700"
        />

    <RelativeLayout
        android:id="@+id/layoutSetting"
        android:layout_width="match_parent"
        android:layout_height="632dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:clipToPadding="false">


        <TextView
            android:id="@+id/nicknameHeader"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="nick name:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nicknameHolder"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nicknameHeader"
            android:layout_marginTop="20dp"
            android:text="nick nameeeeee:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passwordChange"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="198dp"
            android:hint="رمز عبور"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/repeatPasswordChange"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_below="@id/passwordChange"
            android:layout_alignParentTop="true"
            android:layout_marginTop="275dp"
            android:hint="تکرار رمز عبور"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/removeAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changePassword"
            android:layout_marginTop="20dp"
            android:onClick="login_function"
            android:text="remove Account" />

        <Button
            android:id="@+id/changePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repeatPasswordChange"
            android:layout_marginTop="10dp"
            android:onClick="changePassword"
            android:text="change pssword" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/removeAccount"
            android:layout_marginTop="20dp"
            android:onClick="login_function"
            android:text="logout" />



    </RelativeLayout>
</LinearLayout>